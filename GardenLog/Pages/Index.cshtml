@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<body>
    <div class="align-left">
        <h1 class="display-4">Welcome</h1>
        <p>This website is a log book for my garden. Who knows, maybe there will be a recipe or two as well.</p>

        <div id="carouselExampleIndicators" class="carousel slide">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/media/carousel/hedgehg.jpg" class="d-block w-100" alt="Hedgehog in the garden">
                </div>
                <div class="carousel-item">
                    <img src="~/media/carousel/dogandballon.jpg" class="d-block w-100" alt="A hot air ballon over the garden">
                </div>
                <div class="carousel-item">
                    <img src="~/media/carousel/pumpkins.jpg" class="d-block w-100" alt="A lot of harvested pumpkins in varying sizes and colors">
                </div>
                <div class="carousel-item">
                    <img src="~/media/carousel/tomatoes.jpg" class="d-block w-100" alt="A basket full of tomatoes">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    </div>
</body>

